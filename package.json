{
  "name": "indexedfts",
  "version": "0.3.3",
  "description": "Full-Text Search engine for web browser.",
  "keywords": [
    "fts",
    "fulltext",
    "full-text",
    "indexeddb",
    "database",
    "client"
  ],
  "main": "dist/indexedfts",
  "unpkg": "dist/indexedfts.min.js",
  "scripts": {
    "test": "npm run test:node && npm run test:browser",
    "test:node": "NODE_ENV=development ./node_modules/.bin/nyc --require babel-core/register --reporter lcov ./node_modules/.bin/mocha --timeout 5000 ./test/node/*.js",
    "test:browser": "NODE_ENV=development ./node_modules/.bin/karma start",
    "build": "npm run docs && npm run benchmark:build && npm run dist:build",
    "benchmark": "npm run benchmark:build && npm run benchmark:open",
    "benchmark:build": "cd benchmark && ../node_modules/.bin/rollup -c",
    "benchmark:open": "./node_modules/.bin/opener ./benchmark/index.html",
    "dist:build": "NODE_ENV=production node build.js",
    "docs": "./node_modules/.bin/esdoc"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macrat/indexedfts.git"
  },
  "author": {
    "name": "MacRat",
    "email": "m@crat.jp",
    "url": "https://blanktar.jp/"
  },
  "license": "MIT",
  "bugs": "https://github.com/macrat/indexedfts/issues",
  "homepage": "https://macrat.github.io/indexedfts/",
  "devDependencies": {
    "asyncmark": "^0.2.3",
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-power-assert": "^2.0.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "fake-indexeddb": "^2.0.4",
    "karma": "^2.0.5",
    "karma-browserify": "^5.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opener": "^1.4.3",
    "power-assert": "^1.6.0",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "env",
          "power-assert"
        ],
        "plugins": [
          "transform-runtime"
        ]
      }
    }
  },
  "esdoc": {
    "source": "./lib",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  },
  "dependencies": {
    "rollup-plugin-terser": "^1.0.1"
  }
}
